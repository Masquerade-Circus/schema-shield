{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "include": ["lib/**/*"],
  "exclude": ["**/*.spec.ts", "node_modules/**/*", "docs/**/*"],
  "ts-node": {
    "transpileOnly": true
  }
}
